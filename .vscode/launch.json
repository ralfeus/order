    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "attach",
            "host": "sandlet",
            "port": 5678
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Javascript: Firefox",
            "url": "http://sandlet:5000/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://sandlet:5000",
                    "path": "${workspaceFolder}/app"
                }
            ],
            "skipFiles": [
                "**/jquery*",
                "**/popper.js/**"
            ]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app:create_app()",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}