    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Flask  - app",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app:create_app()",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "OM_APP_NAME": "order_master",
                "OM_CONFIG_FILE": "config.json"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Flask - network_builder",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/network_builder",
            "env": {
                "FLASK_APP": "app:app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5001"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}