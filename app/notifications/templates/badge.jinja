{% if notifications %}
<script src="/notifications/static/js/notifications.js"></script>
<label id="notifications_badge" class="btn btn-primary">
    <span class="badge bg-info text-dark">{{ notifications }}</span> notifications
</label>

<div id="toast-container" style="position: absolute; top: 0; right: 0;">
  <div id="toast-template role="alert" aria-live="assertive" aria-atomic="true" 
    data-autohide="false" style="display: none; position: relative; z-index: 999;"">
    <div class="toast-header">
      <!--img src="..." class="rounded mr-2" alt="..."-->
      <strong class="mr-auto toast-title">Bootstrap</strong>
      <small class="toast-time">11 mins ago</small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
  </div>
</div>
{% endif %}